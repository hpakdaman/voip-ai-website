{
    "section": {
        "badge": "Healthcare ROI Calculator",
        "title": "Calculate Your Medical Practice",
        "highlighted": "Savings",
        "description": "See exactly how much Sawtic AI can save your healthcare practice while improving patient satisfaction and care quality."
    },
    "calculator": {
        "title": "Medical Practice ROI Calculator",
        "subtitle": "Calculate your monthly savings with AI call agents",
        "inputs": [
            {
                "id": "missed_calls_per_day",
                "label": "Missed Patient Calls Per Day",
                "type": "number",
                "min": 0,
                "max": 100,
                "default": 15,
                "tooltip": "Average number of patient calls that go unanswered daily"
            },
            {
                "id": "average_appointment_value",
                "label": "Average Appointment Value (AED)",
                "type": "number", 
                "min": 100,
                "max": 2000,
                "default": 400,
                "tooltip": "Average revenue per patient appointment"
            },
            {
                "id": "no_show_rate",
                "label": "Current No-Show Rate (%)",
                "type": "number",
                "min": 0,
                "max": 50,
                "default": 25,
                "tooltip": "Percentage of appointments with patient no-shows"
            },
            {
                "id": "staff_hours_on_calls",
                "label": "Staff Hours on Phone Calls (Daily)",
                "type": "number",
                "min": 1,
                "max": 16,
                "default": 6,
                "tooltip": "Total daily hours staff spend on patient calls"
            },
            {
                "id": "hourly_staff_cost",
                "label": "Average Staff Hourly Cost (AED)",
                "type": "number",
                "min": 15,
                "max": 100,
                "default": 35,
                "tooltip": "Average hourly cost including salary and benefits"
            }
        ],
        "calculations": {
            "recovered_calls_percentage": 85,
            "no_show_reduction_percentage": 70,
            "staff_time_savings_percentage": 60,
            "emergency_response_improvement": 100,
            "sawtic_monthly_cost": 1200
        },
        "results": [
            {
                "id": "recovered_revenue",
                "label": "Monthly Recovered Revenue",
                "description": "Revenue from previously missed calls now converted to appointments",
                "formula": "(missed_calls_per_day * 30 * recovered_calls_percentage / 100) * average_appointment_value",
                "prefix": "AED ",
                "color": "voip-link"
            },
            {
                "id": "no_show_savings", 
                "label": "No-Show Reduction Savings",
                "description": "Revenue saved from reduced appointment cancellations",
                "formula": "(appointments_per_month * no_show_rate / 100 * no_show_reduction_percentage / 100) * average_appointment_value",
                "prefix": "AED ",
                "color": "voip-primary"
            },
            {
                "id": "staff_cost_savings",
                "label": "Staff Cost Savings", 
                "description": "Monthly savings from automated call handling",
                "formula": "(staff_hours_on_calls * 30 * staff_time_savings_percentage / 100) * hourly_staff_cost",
                "prefix": "AED ",
                "color": "voip-accent"
            },
            {
                "id": "total_monthly_benefit",
                "label": "Total Monthly Benefit",
                "description": "Combined monthly financial benefits",
                "formula": "recovered_revenue + no_show_savings + staff_cost_savings",
                "prefix": "AED ",
                "color": "voip-link",
                "highlight": true
            },
            {
                "id": "roi_percentage",
                "label": "Return on Investment",
                "description": "ROI percentage after Sawtic subscription cost",
                "formula": "((total_monthly_benefit - sawtic_monthly_cost) / sawtic_monthly_cost) * 100",
                "suffix": "%",
                "color": "voip-primary",
                "highlight": true
            },
            {
                "id": "payback_period",
                "label": "Payback Period",
                "description": "Time to recover Sawtic investment",
                "formula": "sawtic_monthly_cost / (total_monthly_benefit - sawtic_monthly_cost) * 30",
                "suffix": " days",
                "color": "voip-accent"
            }
        ]
    },
    "benefits_summary": [
        {
            "icon": "uil-phone-volume",
            "title": "Never Miss Emergency Calls",
            "description": "24/7 emergency response even outside office hours"
        },
        {
            "icon": "uil-calendar-alt",
            "title": "Automated Scheduling",
            "description": "Reduce administrative burden on medical staff"
        },
        {
            "icon": "uil-shield-check",
            "title": "HIPAA Compliance",
            "description": "Secure patient data handling and privacy protection"
        },
        {
            "icon": "uil-comments",
            "title": "Multilingual Support",
            "description": "Serve UAE's diverse patient population effectively"
        }
    ],
    "case_study": {
        "clinic_name": "Dubai Family Medical Center",
        "before": {
            "missed_calls": 25,
            "no_show_rate": 30,
            "staff_hours": 8,
            "monthly_loss": "AED 18,500"
        },
        "after": {
            "missed_calls": 3,
            "no_show_rate": 9,
            "staff_hours": 3,
            "monthly_savings": "AED 16,200"
        },
        "testimonial": "Sawtic AI transformed our patient communication. We now provide 24/7 care access while reducing staff workload."
    },
